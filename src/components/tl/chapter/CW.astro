---
import { Icon } from "astro-icon/components";
---

<div class="warning">
    <Icon name="alert-triangle" />
    <span class="header"><strong>Content Warning</strong></span>
    <span class="content"><slot /></span>
</div>

<style lang="scss">
    .warning {
        display: grid;
        align-items: center;
        color: var(--cw-text);
        background-color: var(--cw-bg);
        border-radius: var(--border-radius);
        padding: 0.85em 1em;
        grid-template: 1fr / auto 1fr;
        column-gap: 0.75em;
    }

    .header,
    .content {
        grid-column: 2 / 3;
        margin: 0;
    }

    .header {
        font-size: 1.2rem;
        grid-row: 1 / 2;
    }

    svg {
        font-size: 1.5rem;
    }
</style>
