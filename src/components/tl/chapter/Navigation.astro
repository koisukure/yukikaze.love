---
import { Icon } from "astro-icon/components";

interface Props {
    story?: string;
    previous?: number;
    next?: number;
    noIndex?: boolean;
}

const { story, previous, next, noIndex } = Astro.props;
---

<nav class:list={["story-nav", { noIndex: noIndex }]} class="story-nav">
    <div>
        {
            previous ? (
                <div class="previous">
                    <a href={`/tl/${story}/${previous}`}>
                        <button>
                            <Icon name="chevron-left" />
                        </button>
                    </a>
                </div>
            ) : null
        }
        {
            noIndex === true ? null : (
                <div class="index">
                    <a href={`/tl/${story}`}>
                        <button>
                            <Icon name="star" />
                        </button>
                    </a>
                </div>
            )
        }
        {
            next ? (
                <div class="next">
                    <a href={`/tl/${story}/${next}`}>
                        <button>
                            <Icon name="chevron-right" />
                        </button>
                    </a>
                </div>
            ) : null
        }
    </div>
</nav>

<style lang="scss">
    .story-nav {
        width: 11.25rem;
        grid-column: 2 / 3;

        > div {
            height: 45px;
            background-color: rgba(var(--background-tertiary), 0.75);
            backdrop-filter: blur(5px);
            border-radius: 20px;
            display: grid;
            grid-template: 1fr / 50px 50px 50px;

            justify-content: space-evenly;
            align-items: center;
            justify-items: center;
        }

        svg {
            font-size: 28px;
        }

        &.noIndex {
            width: 8.125rem;

            > div {
                grid-template: 1fr / 50px 50px;
            }
        }
    }

    a {
        text-decoration: none;
        cursor: pointer;
    }

    button {
        background: none;
        border: none;
        padding: 0.25em;
        color: rgb(var(--text-primary));

        &:hover {
            cursor: pointer;
            color: rgb(var(--text-tertiary));
        }
    }

    .previous {
        grid-column: 1 / 2;
    }

    .next {
        grid-column: 2 / 3;
    }

    .index {
        grid-column: 2 / 3;

        ~ .next {
            grid-column: 3 / 4;
        }
    }
</style>
