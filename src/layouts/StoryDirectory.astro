---
// import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { SITE_CDN } from "@/consts";

import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";

import ChapterNav from "@/components/tl/directory/ChapterNav.astro";
import InfoGrid from "@/components/tl/directory/InfoGrid.astro";

import "@/styles/variables/tl.scss";
import "@/styles/tl/directory.scss";

interface Props {
    title: string;
    titleOG?: string;
    description: string;
    // chapterTotal?: number;
    chapterSections: Section[];
    banner: string;
    bannerPosition: string;
    slug: string;
    storyTheme: string;
    translators: Translators[];
    proofreaders: Proofreaders[];
    heroImage: string;
}

const {
    title,
    titleOG,
    description,
    // chapterTotal,
    chapterSections,
    slug,
    banner,
    bannerPosition,
    storyTheme,
    translators,
    proofreaders,
    heroImage,
} = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} image={`${SITE_CDN}/${heroImage}`} />
    </head>

    <body>
        <Header />
        <main data-story-theme={storyTheme}>
            <div class="banner" style=`--bannerPosition: ${bannerPosition}`>
                <Image
                    src={`${SITE_CDN}/${banner}`}
                    alt="cover"
                    inferSize={true}
                    draggable="false"
                />
            </div>
            <div class="directory__wrapper">
                <article>
                    <section>
                        <div class="title__wrapper">
                            <h1 class="en">{title}</h1>
                            {titleOG && <h2 class="og">{titleOG}</h2>}
                            <div class="start">
                                <a href=`/tl/${slug}/1`>Start Reading</a>
                            </div>
                        </div>
                        <slot>
                            <p>{description}</p>
                        </slot>
                    </section>
                    <section class="info__wrapper">
                        <InfoGrid
                            translators={translators}
                            proofreaders={proofreaders}
                        />
                    </section>
                </article>
                <ChapterNav chapterSections={chapterSections} slug={slug} />
            </div>
        </main>
    </body>
</html>
