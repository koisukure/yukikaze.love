---
// import type { CollectionEntry } from "astro:content";
// import { Image } from "astro:assets";
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";

import ChapterNav from "@/components/tl/index/ChapterNav.astro";
import InfoGrid from "@/components/tl/index/InfoGrid.astro";

import "@/styles/variables/tl.scss";
import "@/styles/tl/index.scss";

interface Props {
    title: string;
    titleOG?: string;
    description: string;
    // chapterTotal?: number;
    chapterSections: Section[];
    banner: ImageMetadata;
    bannerPosition: string;
    slug: string;
    storyTheme: string;
    translators: Translators[];
    proofreaders: Proofreaders[];
}

const {
    title,
    titleOG,
    description,
    // chapterTotal,
    chapterSections,
    slug,
    banner,
    bannerPosition,
    storyTheme,
    translators,
    proofreaders,
} = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <body>
        <Header />
        <div
            class="banner"
            style=`--storyBanner: url(${banner.src}); --bannerPosition: ${bannerPosition}`
        >
        </div>
        <div class="main__wrapper" data-story-theme={storyTheme}>
            <main>
                <article>
                    <section>
                        <div class="title__wrapper">
                            <h1 class="en">{title}</h1>
                            {titleOG && <h2 class="og">{titleOG}</h2>}
                            <div class="start">
                                <a href=`/tl/${slug}/1`>Start Reading</a>
                            </div>
                        </div>
                        <slot>
                            <p>{description}</p>
                        </slot>
                    </section>
                    <section class="info__wrapper">
                        <InfoGrid
                            translators={translators}
                            proofreaders={proofreaders}
                        />
                    </section>
                </article>
                <ChapterNav chapterSections={chapterSections} slug={slug} />
            </main>
        </div>
    </body>
</html>
